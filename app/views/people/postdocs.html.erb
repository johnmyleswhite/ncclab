<div style="padding-left: 80px; padding-top: 50px;">
  <h1>POSTDOCTORAL FELLOWS</h1>
  <% @postdocs.each do |postdoc| %>
    <div class="positionpage">
    <div class="personimage">
     <img src="<%= postdoc.image2 %>" />
    </div>
    <div class="personinfo">
     <% if postdoc.url.nil? %>
      <a class="personname" style="text-decoration: none; cursor: text;" href="<%= postdoc.url %>" name="<%= postdoc.name %>"><%= postdoc.name %></a><br /><%= postdoc.title %><br /><%= postdoc.institution %><br />
      <%= postdoc.office %><br /><%= postdoc.email %><br /><%= postdoc.phone %><br />
      <br/>
      <%= postdoc.blurb %>
     <% else %>
      <a class="personname" href="<%= postdoc.url %>" name="<%= postdoc.name %>"><%= postdoc.name %></a><br /><%= postdoc.title %><br /><%= postdoc.institution %><br />
      <%= postdoc.office %><br /><%= postdoc.email %><br /><%= postdoc.phone %><br />
      <br/>
      <%= postdoc.blurb %>
     <% end %>
    </div>
   </div>
  <% end%>
</div>

