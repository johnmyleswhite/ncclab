<div style="padding-left: 80px; padding-top: 50px;">
  <h1>GRADUATE STUDENTS</h1>
  <% @students.each do |student| %>
    <div class="positionpage">
    <div class="personimage">
     <img src="<%= student.image2 %>" />
    </div>
    <div class="personinfo">
     <% if student.url.nil? %>
      <a class="personname" style="text-decoration: none; cursor: text; name="<%= student.name %>"><%= student.name %></a><br /><%= student.title %><br /><%= student.institution %><br />
      <%= student.office %><br /><%= student.email %><br /><%= student.phone %><br />
      <br />
      <%= student.blurb %>
     <% else %>
      <a class="personname" href="<%= student.url %>" name="<%= student.name %>"><%= student.name %></a><br /><%= student.title %><br /><%= student.institution %><br />
      <%= student.office %><br /><%= student.email %><br /><%= student.phone %><br />
      <br />
      <%= student.blurb %>
     <% end %>
    </div>
   </div>
  <% end%>
</div>

